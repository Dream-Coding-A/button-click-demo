<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="2"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_btn_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/userlogin"
            android:text="@string/login_btn_Name"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="30dp" />

        <Button
            android:id="@+id/logout_btn_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/userlogin"
            android:text="@string/logout_btn_Name"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_ID_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Demo Button Click Listener"
        android:textStyle="bold" />

</LinearLayout>